<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <a href="#"><h3><strong><%= post.name %></strong></h3></a>
        <%= image_tag post.image_url, :class => "post-image" %>
      </div>
      <!-- col -->
      <div class="col-sm-6 col-md-4 col-lg-3">
        <p><%= post.description %></p>
      </div>
      <!-- col -->
      <div class="col-sm-6 col-md-4 col-lg-3">
        <p><%= post.image_url %></p>
        <p><%= post.body %></p>
      </div>
      <!-- col -->
        <br>
        <a><%= link_to 'Show', post %></a>
        <a><%= link_to 'Edit', edit_post_path(post) %></a>
        <a><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></a>
      </div>
      <!-- col -->
    <% end %>
  </div>
  <!-- row -->
</div>
<!-- container -->

<br>

<%= link_to 'New Post', new_post_path %>

